FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "include/initialConditions"

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform $velocityField;

boundaryField
{
    front
    {
        type            fixedValue;
        value           uniform $velocityInlet;
    }
	back
	{
		type zeroGradient;
	}
	
	top
	{
		type zeroGradient;
	}

	bottom
	{
		type zeroGradient;
	}

	right
	{
		type empty;
	}

	left
	{
		type empty;
	}

    wall
    {
        type            nonEqMaxwellSlipU;
        accommodationCoeff 1;
        Uwall           $velocityWall;
        refValue        uniform $velocityWall;
        valueFraction   uniform 1.0;
        thermalCreep    true;
        curvature       true;
        value           uniform $velocityWall;
    }
    
    #include "include/boundaries"
}

// ************************************************************************* //
